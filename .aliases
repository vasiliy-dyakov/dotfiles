alias ll='ls -laFo'
alias l='ls -l'
alias la='ls -a'
alias ltr='ls -ltr'
alias ..='cd ..'
alias ...='cd ../..'

alias finder-hidden='defaults write com.apple.finder AppleShowAllFiles YES'
alias finder-hidden-off='defaults write com.apple.finder AppleShowAllFiles NO'
alias finder-hidden-no='defaults write com.apple.finder AppleShowAllFiles NO'

alias grep='grep --color=auto'

alias e=$EDITOR
alias es='vim -c"sy off"'

replace() {
    # заменить React на Angular в папке components в файлах, удовлетворяющих шаблону \.jsx$
    # replace React Angular components \.jsx$
    # sed -i '' -e s/React/Angular/ `ag -l React components -G \.jsx$`
    sed -i '' -e s/$1/$2/ `ag -l $1 $3 -G ${4:-'.*'}`
}
alias replace=replace

# искать файл по имени (шаблон)
search() {
    ag -l -G $1 --smart-case --hidden
}
alias search=search

alias g1='git log -1'
alias g9='git lol -9'
alias s1='svn log -l1'

# Git
alias ga='git add'
alias gb='git rev-parse --abbrev-ref @'
alias gc='ga . --all && git commit -m'
alias gd='git di'
alias gds='gd --staged'
alias gdpr='gd --name-status `git merge-base ${1:=origin/master} HEAD`..HEAD'
alias gf='git fetch --prune'
alias gh='git hist'
alias gl='git lol'
alias gm='git merge --no-ff'
alias gp='git pull --rebase'
alias gr='git remote -v'
alias gs='git st'
alias gt='git tag'
alias gst='git status -sb'

alias vim='/usr/local/Cellar/vim/7.4.898/bin/vim'
vimD() {
    vim `gd --name-status | grep -E '^[AM]' | awk ' {print $2} ' | xargs ls 2>/dev/null`
}
vimS() {
    vim `gds --name-status | grep -E '^[AM]' | awk ' {print $2} ' | xargs ls 2>/dev/null`
}
vimPr() {
    vim `gdpr | grep -E '^[AM]' | awk ' {print $2} ' | xargs ls 2>/dev/null`
}
alias vimd=vimD
alias vims=vimS
alias vimpr=vimPr
