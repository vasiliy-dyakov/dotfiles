alias ll='ls -la'
alias l='ls -l'
alias la='ls -a'

alias grep='grep --color=auto'

# Git
alias ga='git add --all'
gc() {
    staged=$(git diff --staged --name-only);
    if [[ -z $staged ]]; then
        git add --all . && git commit -m "$@"
    else
        git commit -m "$@"
    fi
}
alias gd='git di'
alias gdc='git di --cached'
alias gds='git di --staged'
alias gdpr='gd `git merge-base ${1:-origin/develop} HEAD`..HEAD'
alias gf='git fetch --prune'
alias gh='git hist'
alias gl='git lol'
alias g9='git lol -9'
alias gp='git pull --rebase'
alias gs='git st'
alias gst='git stash'
alias gsts='git stash save'
gsta() {
    git stash apply stash@{$1}
}
gstp() {
    git stash pop stash@{$1}
}
alias gstl='git stash list'
gdn() {
    oldIFS=$IFS;
    IFS=$'\n';
    files=(`gd --name-only`);
    IFS=$oldIFS;
    echo "${files[$1 - 1]}";
}
alias ga1='ga `gdn 1`';
alias ga2='ga `gdn 2`';
alias ga3='ga `gdn 3`';
alias ga4='ga `gdn 4`';
alias ga5='ga `gdn 5`';
alias ga6='ga `gdn 6`';
alias ga7='ga `gdn 7`';
alias ga8='ga `gdn 8`';
alias ga9='ga `gdn 9`';

